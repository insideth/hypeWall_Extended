            <type>elgg_release</type>
            <version>1.9</version>
    </requires>

	<requires>
		<type>plugin</type>
		<name>hypeWall</name>
		<version>3.2.0</version>
	</requires>
	
	<suggests>
		<type>plugin</type>
		<name>videolist</name>
		<version>1.11</version>
	</suggests>
		
	<suggests>
		<type>plugin</type>
		<name>poll</name>
		<version>1.9.4</version>
	</suggests>
	
	<suggests>
		<type>plugin</type>
		<name>blog</name>
		<version>1.9</version>
